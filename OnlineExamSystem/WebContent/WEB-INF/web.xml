	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>servlets.LoginServlet</servlet-class>
		<init-param>
			<param-name>userNameI</param-name>
			<param-value>Admin</param-value>
		</init-param>

		<init-param>
			<param-name>passWordI</param-name>
			<param-value>Admin</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>servlets.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>addSubjectController</servlet-name>
		<servlet-class>controllers.addSubjectController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>createExamController</servlet-name>
		<servlet-class>controllers.createExamController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>editExamController</servlet-name>
		<servlet-class>controllers.editExamController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>updateExamController</servlet-name>
		<servlet-class>controllers.updateExamController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>addQuestionController</servlet-name>
		<servlet-class>controllers.addQuestionController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SignupServlet</servlet-name>
		<servlet-class>servlets.SignupServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TableViewServlet</servlet-name>
		<servlet-class>servlets.TableViewServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DetailedViewServlet</servlet-name>
		<servlet-class>servlets.DetailedViewServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AnswerExamServlet</servlet-name>
		<servlet-class>servlets.AnswerExamServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>StartAnswerExamServlet</servlet-name>
		<servlet-class>servlets.StartAnswerExamServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>addSubjectController</servlet-name>
		<url-pattern>/addSubject</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SignupServlet</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>createExamController</servlet-name>
		<url-pattern>/createExam</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>editExamController</servlet-name>
		<url-pattern>/editExam</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>updateExamController</servlet-name>
		<url-pattern>/updateExam</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>addQuestionController</servlet-name>
		<url-pattern>/addQuestion</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TableViewServlet</servlet-name>
		<url-pattern>/tableUpdateMarks</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DetailedViewServlet</servlet-name>
		<url-pattern>/detailUpdateMarks</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AnswerExamServlet</servlet-name>
		<url-pattern>/answerExam</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StartAnswerExamServlet</servlet-name>
		<url-pattern>/startAnswerExam</url-pattern>
	</servlet-mapping>
</web-app>